{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Auto-save like Replit
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Format on save
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Tailwind CSS IntelliSense - Enhanced Visual Development
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  "tailwindCSS.colorDecorators": true, // Show color swatches inline
  "tailwindCSS.showPixelEquivalents": true, // Show px values for rem/em

  // Headwind - Auto-sort Tailwind classes
  "headwind.runOnSave": true,

  // File exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true
  },

  // Language-specific formatters
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Terminal settings - Replit-like integrated terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",

  // Editor settings for better experience
  "editor.minimap.enabled": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.linkedEditing": true, // Auto-rename paired HTML/JSX tags
  "editor.colorDecorators": true, // Show color swatches inline
  "editor.unicodeHighlight.ambiguousCharacters": false,

  // File watcher (like Replit's auto-reload)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },

  // Breadcrumbs for navigation
  "breadcrumbs.enabled": true,

  // TypeScript/JavaScript settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,

  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Problems panel
  "problems.autoReveal": true,

  // Live Preview settings (for embedded browser preview)
  "livePreview.defaultPreviewPath": "http://localhost:5000",
  "livePreview.portNumber": 5000,
  "livePreview.autoRefreshPreview": "onSave",

  // Simple Browser settings
  "simpleBrowser.focusLockIndicator.enabled": true,

  // CSS Peek - View CSS definitions
  "css.enabledLanguages": ["html", "typescriptreact", "javascriptreact"],

  // Emmet - Enhanced HTML/JSX shortcuts
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",

  // HTML Tag Wrapping
  "htmltagwrap.tag": "div",

  // Image Preview in Gutter
  "gutterpreview.imagePreviewMaxHeight": 100,
  "gutterpreview.showimagepreviewongutter": true,

  // Color Picker Settings
  "colorHelper.disableGPU": false,
  "colorHelper.storeDir": ".vscode",

  // React/Component Development (optimized for Claude Code)
  "react.snippets.enable": true,
  "javascript.preferences.quoteStyle": "double",
  "typescript.preferences.quoteStyle": "double",
  "typescript.preferences.importModuleSpecifier": "relative",

  // Better error visibility for UI work
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.fontSize": "0.9em",

  // Auto-close tags
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "html",
    "javascriptreact",
    "typescriptreact"
  ],

  // GitHub Copilot settings (if installed)
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true,
    "javascript": true,
    "typescript": true,
    "typescriptreact": true,
    "javascriptreact": true
  },

  // === PROJECT-SPECIFIC SETTINGS ===

  // Files to watch for changes (for Claude Code context)
  "files.associations": {
    "*.env*": "dotenv",
    "*.css": "tailwindcss"
  },

  // PostgreSQL/Drizzle specific
  "sqltools.connections": [
    {
      "name": "Local PostgreSQL",
      "driver": "PostgreSQL",
      "server": "localhost",
      "port": 5432,
      "database": "${env:DATABASE_NAME}",
      "username": "${env:DATABASE_USER}",
      "password": "${env:DATABASE_PASSWORD}",
      "previewLimit": 50
    }
  ],

  // NPM Script visibility
  "npm.enableScriptExplorer": true,
  "npm.scriptExplorerAction": "run",

  // Path aliases (for imports)
  "path-autocomplete.pathMappings": {
    "@": "${folder}/client/src",
    "@shared": "${folder}/shared",
    "@assets": "${folder}/attached_assets"
  },

  // TypeScript project references
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  // REST Client environment
  "rest-client.environmentVariables": {
    "local": {
      "baseUrl": "http://localhost:5000"
    },
    "production": {
      "baseUrl": "${env:PRODUCTION_URL}"
    }
  }
}
