{
  "name": "post-secondary-assessment-demo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "cd apps/server && npm run start",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run db:generate",
    "test": "turbo run test",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:rbac": "tsx scripts/validate-rbac-system.ts",
    "seed-test-data": "tsx scripts/seed-test-data.ts",
    "validate-rbac": "npm run seed-test-data seed && npm run test:rbac && npm run test:integration"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  }
}
